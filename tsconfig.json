{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "outDir": "dist/esm",
    "types": ["node", "jest"]
  }
}
